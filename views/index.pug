extends layout

block content
  .container
    div(class='dropdown')
      #addNote
        button(onclick='myFunction()', id='dropBtn') + Add New Note
        div(id='myDropdown', class='dropdown-content')
          #addForm      
            form(id='FormAdd')
              p 
                br
                input(id='title', type = 'text', name ='title', placeholder='Title' tabindex='1')
                br
                br
                br
                textarea(id='content', name='content', placeholder='Note', rows='4' tabindex='2')
                br
                br
              input(onclick='myFunction()', id='saveBtn', type='image', src='/images/doneIcon-square.png', class="button", value='Save')

    #page-footer
      button(id='deleteSquare', onclick='deleteSelectFunction()')
        img(class='deleteSquare', src='/images/deleteIcon-square.png')
      h3 Pix [ ]

    #mainContent
      script(src='/javascripts/main.js') 